generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id Int @id @default(autoincrement())
  name String
  description String?
  createdAt DateTime @default(now())
  finishedAt DateTime?
  statusId Int
  
  status TaskStatus @relation(fields: [statusId], references: [id])

  @@map("tasks")
  
}

model TaskStatus {
  id Int @id @default(autoincrement())
  name String
  task Task[]

  @@map("task_status")
}
